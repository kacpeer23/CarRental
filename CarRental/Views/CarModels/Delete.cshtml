@model CarRental.Models.CarModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Usuń</h1>

<h3 class "text-warning">Czy na pewno chcesz usunąć?</h3>
<div>
    <h4 class="text-warning">Samochód</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.CarBrand)
        </dt>
        <dd class = "col-sm-10 text-warning">
            @Html.DisplayFor(model => model.CarBrand)
        </dd>
        <dt class = "col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.CarModelName)
        </dt>
        <dd class = "col-sm-10 text-warning">
            @Html.DisplayFor(model => model.CarModelName)
        </dd>
        <dt class = "col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.YearOfProduction)
        </dt>
        <dd class = "col-sm-10 text-warning">
            @Html.DisplayFor(model => model.YearOfProduction)
        </dd>
        <dt class = "col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.Fuel)
        </dt>
        <dd class = "col-sm-10 text-warning">
            @Html.DisplayFor(model => model.Fuel)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy</a>
    </form>
</div>
