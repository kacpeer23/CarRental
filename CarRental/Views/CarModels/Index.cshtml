@model IEnumerable<CarRental.Models.CarModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class= "text-warning">Samochody</h1>

<p>
    <a asp-action="Create">Dodaj nowy samochód</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-warning">
                @Html.DisplayNameFor(model => model.CarBrand)
            </th>
            <th class="text-warning">
                @Html.DisplayNameFor(model => model.CarModelName)
            </th>
            <th class="text-warning">
                @Html.DisplayNameFor(model => model.YearOfProduction)
            </th>
            <th class="text-warning">
                @Html.DisplayNameFor(model => model.Fuel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-warning">
                @Html.DisplayFor(modelItem => item.CarBrand)
            </td>
            <td class="text-warning">
                @Html.DisplayFor(modelItem => item.CarModelName)
            </td>
            <td class="text-warning">
                @Html.DisplayFor(modelItem => item.YearOfProduction)
            </td>
            <td class="text-warning">
                @Html.DisplayFor(modelItem => item.Fuel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
